---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Kesempatan untuk bangun portofolio yang sesuai dengan industri",
    description:
      "Project yan akan anda kerjakan di course kami akan sesuai dengan kebutuhan industri",
    icon: "mdi:handshake",
  },
  {
    title: "Kurikulum yang sesuai dengan kebutuhan industri",
    description:
      "Kurikulum kami yang relevan dengan dunia industri akan memudahkan anda dalam berkarier",
    icon: "mdi:feather",
  },
  {
    title: "Mentor yang berpengalaman",
    description:
      "Mentor yang berpengalaman akan membantu anda dalam menghadapi berbagai tantangan belajar",
    icon: "mdi:directions-fork",
  },
  {
    title: "Komunitas yang aktif dan suportif",
    description:
      "Komunitas yang aktif dan suportif akan membantu anda ketika kesusahan dan membantu anda untuk berkembang",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Kenapa Harus Cyber House?" id="About Us">
  <Fragment slot="lead">
    Materi Yang Disajikan <span class="text-[#fab520]"> Mudah Dipahami</span>. Materi Di Susun Berdasarkan
    <span class="text-[#fab520]">Studi Kasus Nyata</span>
    Kurikulum Sesuai Dengan<span class="text-[#fab520]"> Kebutuhan Industri</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full " />
          </div>
          <p class="text-center font-extrabold text-xl text-[#f5ba20]">{title}</p>
          <p class="text-center text-offset text-sm text-white">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
