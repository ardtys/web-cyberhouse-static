---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import ContentSection from '~/components/content-section.astro';
import Logo from '~/assets/Logo.webp';
---

<center>
	<Image
		alt="Logo"
		src={Logo}
		width={126}
	/>
</center>
<ContentSection
	title="Amati, Praktekan & Sukses"
	id="intro">
	<Fragment slot="lead">
		<span class="text-[#f5ba20]">Amati</span> Materi Terbaik Kami,
		<span class="text-[#f5ba20]">Praktekan</span> Dalam Studi Kasus Yang Nyata Dan
		<span class="text-[#f5ba20]">Sukses</span> Dalam Dunia Cyber Security
	</Fragment>
	<div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
		<a
			href="https://discord.com/invite/4NhxAkph"
			class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 hover:text-[#f5ba20]">
			<Icon
				name="mdi:telescope"
				class="size-8"
			/>
			<span>Join Our Community</span>
		</a>
		<a
			href="https://www.instagram.com/cyberhouse.id?igsh=NDZxa3hlcjQxY3ht"
			class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4 hover:text-[#f5ba20]">
			<Icon
				name="mdi:rocket"
				class="size-8"
			/>
			<span>Get More Information</span>
		</a>
	</div>
</ContentSection>
