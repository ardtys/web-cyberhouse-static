---
import HackerImage from '~/assets/hacker.webp';
import HeroImage from '~/components/hero-image.astro';
import Logo from '~/assets/Logo.webp';
import { Image } from 'astro:assets';
import Background from '../components/videoBaground.astro';

const widths = [1000, 1000];
const sizes = '(min-width: 640px) 10vw, 10vw';
---

<section class="relative h-full w-full">
	<Background />

	<div
		id="splash-bg-fallback"
		class="absolute inset-0 hidden opacity-40">
		<HeroImage />
	</div>

	<div class="relative grid h-full place-items-center sm:grid-cols-2">
		<h2
			class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
			<Image
				alt="Logo"
				src={Logo}
				width={100}
				class="max-lg:w-[80px]"
			/>
			<div
				class="text-center font-extrabold tracking-tighter text-6xl text-gradient md:text-8xl">
				Bootcamp langsung
				<br /> dapat kerja dalam,
				<br /> 12 bulan.
			</div>
		</h2>

		<div
			id="astronaut"
			class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start">
			<Image
				class="float-end h-full w-[70vh] object-cover 2xl:mt-[-8rem]"
				src={HackerImage}
				widths={widths}
				sizes={sizes}
				loading="eager"
				alt="A floating astronaut in a space suit"
			/>
		</div>
	</div>
</section>

<noscript>
	<style>
		#splash-bg-fallback {
			display: block;
		}
	</style>
</noscript>

<style>
	@keyframes float {
		0% {
			transform: translate3d(0, 0, 0);
		}
		100% {
			transform: translate3d(0, 30px, 0);
		}
	}

	#astronaut {
		animation: float linear 2.5s infinite alternate;
	}

	@media (prefers-reduced-motion: reduce) {
		#astronaut {
			@apply animate-none;
		}
		:global(#starfield) {
			@apply hidden;
		}
		#splash-bg-fallback {
			@apply block;
		}
	}
</style>
